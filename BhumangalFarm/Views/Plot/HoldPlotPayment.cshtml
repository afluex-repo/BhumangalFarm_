        }
        else if ($('#PaymentMode').val() == '6') {
            $('#txndt').html('IMPS Date');
            $('#txnNo').text('IMPS No.');
            $("#divPaymentMode").show();
            $("#divtransactiono").show();
            $("#divbankname").show();
            $("#spntrannumber").hide();
            $("#spntradate").hide();
            $("#spnbankname").hide();
            $("#spnbankbranch").hide();
            $("#divbankbranch").show();
            $("#TransactionNumber").attr("placeholder", "IMPS No.");
            $("#TransactionDate").attr("placeholder", "IMPS Date");
            $('#Fk_BankId').val('0');
            $('#Fk_BankId').attr('disabled', false);
        }
        else if ($('#PaymentMode').val() == '7') {

            $('#txnNo').text('Mobile No./UPI ID');
            $("#divPaymentMode").show();
            $("#divtransactiono").show();
            $("#divbankname").hide();
            $("#spntrannumber").show();
            $("#divbankbranch").hide();
            $("#divPaymentMode").hide();
            $("#TransactionNumber").attr("placeholder", "Mobile No. / UPI ID");
            $('#Fk_BankId').val('0');
            $('#Fk_BankId').attr('disabled', false);
        }
        else if ($('#PaymentMode').val() == '8') {

            $('#txnNo').text('Mobile No. / UPI ID');
            $("#divPaymentMode").show();
            $("#divtransactiono").show();
            $("#spntrannumber").show();
            $("#divbankname").hide();
            $("#divbankbranch").hide();
            $("#divPaymentMode").hide();
            $("#TransactionNumber").attr("placeholder", "Mobile No. / UPI ID");
            $('#Fk_BankId').val('0');
            $('#Fk_BankId').attr('disabled', false);
        }
        else if ($('#PaymentMode').val() == '9') {

            $('#txnNo').text('Mobile No. / UPI ID');
            $("#divPaymentMode").show();
            $("#divtransactiono").show();
            $("#divbankname").hide();
            $("#spntrannumber").show();
            $("#divbankbranch").hide();
            $("#divPaymentMode").hide();
            $("#TransactionNumber").attr("placeholder", "Mobile No. / UPI ID");
            $('#Fk_BankId').val('0');
            $('#Fk_BankId').attr('disabled', false);
        }
        else if ($('#PaymentMode').val() == '10') {
            $("#spntrannumber").show();
            $("#spnbankname").show();
            $('#txnNo').text('Mobile No. / UPI ID');
            $("#divPaymentMode").show();
            $("#divtransactiono").show();
            $("#divbankname").show();
            $("#divbankbranch").hide();
            $("#divPaymentMode").hide();
            $("#TransactionNumber").attr("placeholder", "Mobile No. / UPI ID");
            $('#Fk_BankId').val('0');
            $('#Fk_BankId').attr('disabled', false);
        }
        else if ($('#PaymentMode').val() == '11') {

            $('#txndt').html('Transaction Date');
            $('#txnNo').text('Reciept No.');
            $("#spntrannumber").show();
            $("#spntradate").show();
            $("#divPaymentMode").show();
            $("#divtransactiono").show();
            $("#divbankname").hide();
            $("#divbankbranch").hide();
            $("#TransactionNumber").attr("placeholder", "Reciept No.");
            $("#TransactionDate").attr("placeholder", "Transaction Date");
            $('#Fk_BankId').val('0');
            $('#Fk_BankId').attr('disabled', false);
        }
        else {
            $('#Fk_BankId').attr('disabled', false);
            $('#Fk_BankId').val('0');
            $("#divPaymentMode").hide();
            $("#divtransactiono").hide();
            $("#divbankname").hide();
            $("#divbankbranch").hide();
        }

    }

</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
