@model BhumangalFarm.Models.Plot

@{
    ViewBag.Title = "VisitorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section">
    <ul class="breadcrumb breadcrumb-style ">
        <li class="breadcrumb-item">
            <a href="#">
                <i data-feather="home"></i>
            </a>
        </li>
        <li class="breadcrumb-item">Master</li>
        <li class="breadcrumb-item">Team Members</li>
    </ul>
</section>


<div class="section-body">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Team Members</h4>
                <p style="color: red">&nbsp;</p>
            </div>

            <div class="card-body pt-0">
                <div class="row mb-3" id="divsave"> 

                    <div class="input-field col-md-6 col-lg-4">
                        <label>Name <span style="color:red">*</span></label>
                        <input type="text"
                               class="form-control"
                               placeholder="Enter your name"
                               value="" />
                    </div>
                    <div class="input-field col-md-6 col-lg-4">
                        <label>Designation  <span style="color:red">*</span></label>
                        <input type="text"
                               class="form-control"
                               placeholder="Enter your designation"
                               value="" />
                    </div>
                    <div class="input-field col-md-6 col-lg-4">
                        <label>Photo <span style="color:red">*</span></label>
                        <input type="file"
                               class="form-control"
                               value="" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="input-field col s12"> 
                        <input class="btn cyan waves-effect waves-light left btn-primary"
                               type="submit"
                               onclick="return validateform();"
                               value="Save"
                               id="btnSave"
                               name="btnSave" />
                         
                        <input type="hidden" id="UserType" value="Admin" />
                        <input type="hidden" id="UserTypeName" value="Administrator" />

                        <a class="btn btn-info" href="/Master/NewsList">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>